{
    "root": true,
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": ["prettier", "eslint:recommended", "plugin:vue/recommended"],
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "double"],
        "semi": ["error", "always"],
        "vue/html-indent": [
            "error",
            4,
            {
                "alignAttributesVertically": false
            }
        ],
        "vue/max-attributes-per-line": [
            2,
            {
                "singleline": 3,
                "multiline": {
                    "max": 2
                }
            }
        ],
        "vue/mustache-interpolation-spacing": [2, "never"]
    }
}
